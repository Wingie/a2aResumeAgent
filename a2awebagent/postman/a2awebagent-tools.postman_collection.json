          "});",
          "",
          "pm.test('Response time is acceptable', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(180000); // 3 minutes max",
          "});",
          "",
          "// Log response info",
          "console.log('âœ… Tool test completed:', pm.info.requestName);",
